<p id="notice"><%= notice %></p>

<h1>Listing Images</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
	  	<td><img style="width: 200px;" src='<%= image.file.url(:thumb) %>'/></td>
        <td><%= button_to 'Destroy', image, method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_image_path %>
